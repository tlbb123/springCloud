<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tllt.springcloud.mapper.PaymentMapper">

    <insert id="create"  parameterType="com.tllt.springcloud.entities.Payment" useGeneratedKeys="true" keyProperty="paymentId">
        insert into payment( serial) values(#{serial});
    </insert>

    <resultMap id="BaseResultMap" type="com.tllt.springcloud.entities.Payment">
        <id column="payment_id" property="paymentId" jdbcType="BIGINT"/>
        <id column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getPaymentById" parameterType="Long" resultMap="BaseResultMap">
        select * from payment where payment_id= #{paymentId};
    </select>

</mapper>
